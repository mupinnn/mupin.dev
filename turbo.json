{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["VELITE_STARTED", "NOTION_MEMOIR_TOKEN", "NOTION_MEMOIR_DATABASE_ID"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        ".svelte-kit/**",
        ".vercel/**",
        ".vercel/output/**",
        ".nuxt/**",
        ".out/**",
        "dist/**",
        ".velite/**"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
