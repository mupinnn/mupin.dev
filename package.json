{
  "name": "mupin.dev",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "deploy": "turbo deploy",
    "format": "prettier -w -c \"**/*.{ts,tsx,md,mdx,js,jsx,json,yaml,yml,html,css,scss,sass,astro}\"",
    "prepare": "husky"
  },
  "packageManager": "pnpm@10.10.0",
